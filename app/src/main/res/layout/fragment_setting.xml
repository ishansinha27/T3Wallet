<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashbg"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:paddingTop="16dp"/>

    <!-- General Section -->
    <TextView
        android:id="@+id/generalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="44dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/generalDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currency conversion, primary currency,\nlanguage, and search engine"
        android:textColor="@color/white"
        android:textSize="14sp"

        app:layout_constraintTop_toBottomOf="@id/generalTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp"/>

    <!-- Security & Privacy Section -->
    <TextView
        android:id="@+id/securityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security and Privacy"
        android:textColor="@color/white"

        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="26dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/generalDesc"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/securityDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy settings, MetaMetrics, private key, and\nwallet Secret Recovery Phrase"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/securityTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp"/>

    <!-- Advanced Section -->
    <TextView
        android:id="@+id/advancedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advanced"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="26dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/securityDesc"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/advancedDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Access developer features, reset account,\nsetup testnets, state logs, IPFS gateway, and\ncustom RPC"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/advancedTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp"/>

    <!-- Contacts Section -->
    <TextView
        android:id="@+id/contactsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacts"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="26dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/advancedDesc"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/contactsDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add, edit, remove, and manage your accounts"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/contactsTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp"/>

    <!-- Networks Section -->
    <TextView
        android:id="@+id/networksTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Networks"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="26dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/contactsDesc"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/networksDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add and edit custom RPC networks"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/networksTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp"/>

    <!-- Additional Menu Items -->
    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Sovereign"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="26dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/networksDesc"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/requestFeature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request a feature"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="26dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/about"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/contactSupport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact support"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/requestFeature"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lock"
        android:textColor="#F44480"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="26dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/contactSupport"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
