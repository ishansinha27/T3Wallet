<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#00000000">


    <ImageView
        android:id="@+id/cryptoimage"
        android:layout_width="50dp"
        android:layout_height="50dp"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/eth" />

    <TextView
        android:id="@+id/cryptoname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="ETH"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@+id/cryptoimage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cryptoprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="12dp"
        android:text="$ 0.15"
        app:layout_constraintStart_toStartOf="@+id/cryptoname"
        app:layout_constraintTop_toBottomOf="@+id/cryptoname" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/cryptoprice"
        app:layout_constraintStart_toEndOf="@+id/cryptoprice"
        app:layout_constraintTop_toTopOf="@+id/cryptoprice"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/arrow1" />

    <TextView
        android:id="@+id/cryptoChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  + 0.0%"
        android:textColor="#22B14C"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />
</androidx.constraintlayout.widget.ConstraintLayout>